{
  "name": "Sidebar",
  "version": "0.0.1",
  "manifest_version": 2,
  "description" : "Meet people through the browser...",
  "icons": { "16": "icons/16x16_heart.png", "48": "icons/48x48_heart.png", "128": "icons/128x128_heart.png" },

  "browser_action": {
    "default_icon": {
      "19": "icons/19x19_heart_idle.png",
      "38": "icons/38x38_heart_idle.png"
    },
    "default_title": ""
    //"default_popup": "browseraction/popup.html"
  },

  "background": {
    "scripts": ["lib/jquery-1.11.0.min.js", "background.js"],
    "persistent": false// should be used 
  },

  // Allows you to use an html page of your creation instead of the default google tabs page
  // "chrome_url_overrides" : {
  //    "newtab": "newtab/newtab.html"
  // },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "lib/jquery-1.11.0.min.js",
        "lib/jquery.ziptastic.js", 
        "lib/angular.min.js", 
        "lib/angular-resource.min.js", 
        "lib/angular-route.min.js",
        "lib/angular-ui-router.min.js",
        "lib/angular-animate.js",
        "lib/angular-draganddrop.js",
        "lib/angular-touch.js",
        "lib/rangeInputSupported.js",
        "lib/angular-slider.js",
        //"lib/bootstrap-3.1.1-dist/js/bootstrap.min.js",
        "lib/jquery.flexslider.js",
        "lib/angular-carousel.js",
        "lib/angular-file-upload.js",
        "lib/d3.v3.min.js",
        "lib/socket.io.js",
        "content.js"
      ]
    }
  ],

  "web_accessible_resources": [
      "content.html",
      "icons/*",
      "profiles/*",
      "*.json",
      "partials/*",
      "lib/*",
      "lib/*/*/*",
      "lib/angular.min.js.map",
      "lib/angular-resource.min.js.map",
      "lib/angular-route.min.js.map",
      "lib/angular-ui-router.min.js.map",
      // "icon_22997/icon_22997.png",
      // "icon_22996/icon_22996.png",
      // "icon_15724/icon_15724.png",
      // "icon_25798/icon_25798.png",
      "css/*"
  ],
  "permissions": ["tabs", "history", "notifications","http://*/*", "https://*/*"]

  // "content_security_policy": "script-src 'self' http://localhost:3000 ; object-src 'self' "
}