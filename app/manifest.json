{
  "name": "Sidebar",
  "version": "0.0.3",
  "manifest_version": 2,
  "description" : "Meet people through the browser...",

  "browser_action": {
    "default_icon": {
      "19": "images/19x19grey.png",
      "38": "images/38x38grey.png"
    },
    "default_title": ""
  },

  "background": {
    "scripts": ["lib/jquery-1.11.0.min.js", "background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "lib/underscore.js",
        "lib/jquery-1.11.0.min.js",
        "src/js/openClose.js",
        "content.js"
      ]
    }
  ],

  "web_accessible_resources": [
      "iframe-experiment.html",
      "icons/*",
      "css/*"
  ],

  "permissions": [
    "tabs",
    "history",
    "http://*/*", 
    "https://*/*"
  ]

}